set $w08 8: 
set $w09 9: 
set $w10 10: 

#
# Autostart:
# Hint: use `swaymsg -t get_tree` to retrieve the class of a window
#
assign [app_id="firefox"] workspace $w01
assign [app_id="Chromium"] workspace $w01
assign [class="code-oss"] workspace $w02
assign [app_id="termite"] workspace $w08
assign [app_id="telegram-desktop"] workspace $w09
assign [class="Franz"] workspace $w09
assign [class="keepassxc"] workspace $w10
exec keepassxc
exec QT_WAYLAND_DISABLE_WINDOWDECORATION=1 telegram-desktop # https://github.com/swaywm/sway/wiki
exec nextcloud
exec $term
exec $browser
exec code
exec mako # notification server

