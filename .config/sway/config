#
# Default applications:
#
exec xrdb $HOME/.Xresources # load terminal settings (this works on X out of the box)
set $term urxvt
set $browser GDK_BACKEND=wayland firefox

#
# Workspaces:
#
set $w01 1
set $w02 2
set $w03 3
set $w04 4
set $w05 5
set $w06 6
set $w07 7
set $w08 8: T
set $w09 9: IM
set $w10 10: BG

#
# Autostart:
# Hint: use `swaymsg -t get_tree` to retrieve the class of a window
#
assign [class="keepassxc"] workspace $w10
assign [app_id="telegram-desktop"] workspace $w09
exec keepassxc
exec telegram-desktop
exec nextcloud

#output * bg /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png fill
output * bg $HOME/Images/kda-beat-saber.jpg fill

#
# Bar:
#
bar {
	swaybar_command waybar
}

#
# Includes:
#
include hardware
include hotkeys
include /etc/sway/config.d/*
